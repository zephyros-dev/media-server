{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ansible": {
    "managerFilePatterns": ["/(^|/)tasks/.+\\.ya?ml$/"]
  },
  "automerge": true,
  "extends": [
    "github>zephyros-dev/docker-koreader",
    "github>zephyros-dev/renovate-config"
  ],
  "git-submodules": {
    "enabled": true
  },
  "ignoreTests": true,
  "packageRules": [
    {
      "automerge": false,
      "matchPackageNames": ["/python/", "/cue/"],
      "matchUpdateTypes": ["major", "minor"]
    },
    {
      "automerge": false,
      "groupName": "immich",
      "matchPackageNames": ["/ghcr.io/immich-app/"],
      "matchUpdateTypes": ["major", "minor"]
    },
    {
      "groupName": "caddy",
      "matchPackageNames": ["/caddy/"]
    },
    {
      "automerge": false,
      "groupName": "caddy",
      "matchPackageNames": ["/caddy/"],
      "matchUpdateTypes": ["major", "minor"]
    },
    {
      "groupName": "dagger",
      "matchPackageNames": ["/dagger/"]
    },
    {
      "groupName": "ansible-lint",
      "matchPackageNames": ["/ansible-lint/"]
    }
  ],
  "schedule": ["* 1-14 * * *"],
  "updateNotScheduled": false
}
